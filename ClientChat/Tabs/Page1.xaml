<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ClientChat"
             xmlns:Syncfusion="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms"
             xmlns:local1="clr-namespace:System.Data;assembly=netstandard"
             mc:Ignorable="d"
             x:Class="ClientChat.Tabs.Page1"
             Title="Favorites"
             >
    
    <!--<ContentPage.BindingContext>
        <local1:DataTable  x:Name="DataTable"/>
    </ContentPage.BindingContext>
    ItemsSource="{Binding dt}"
    -->
    
    <Syncfusion:SfDataGrid  x:Name="gridData"
                            AutoGenerateColumns="True"
                            AllowSorting="true"
                            AllowTriStateSorting="True"
                            AllowMultiSorting="True"
                            VerticalOverScrollMode="None"
                            ColumnSizer="Star"
                            AllowDraggingColumn="True"
                            AllowDraggingRow="True"
                            SelectionMode="Single"
                            >
    </Syncfusion:SfDataGrid>
</ContentPage>